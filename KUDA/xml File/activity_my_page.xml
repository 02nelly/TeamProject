<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MyPageActivity">


    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/man"/>
    <TextView
        android:id="@+id/textViewShowId"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25sp" />

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="405dp"
        android:columnCount="2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textViewName"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:text="성명"
            android:textAlignment="center"
            android:textColorHint="#03A9F4"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/editTextName"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="이름 입력학세요"
            android:inputType="textPersonName"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewIntro"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginBottom="20dp"
            android:text="자기소개"
            android:inputType="textLongMessage"
            android:textAlignment="center"
            android:textSize="20dp" />

        <EditText
            android:id="@+id/editTextIntro"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:hint="자기소개 입력"
            android:inputType="textLongMessage"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/textViewGender"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:text="성별"
            android:textAlignment="center"
            android:textSize="20dp" />

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="30dp"
                android:text="남자"
                android:textSize="20dp" />

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="여자"
                android:textSize="20dp" />
        </RadioGroup>

        <TextView
            android:id="@+id/textViewPass"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:text="비밀번호 변경"
            android:textAlignment="center"
            android:textSize="20dp" />


        <EditText
            android:id="@+id/editTextPass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="22dp"
            android:ems="10"
            android:hint="새로운 비번 입력하세요"
            android:inputType="textPassword"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/textViewPassRecon"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:text="비번 재확인"
            android:textAlignment="center"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/editTextPassRecon"
                android:layout_width="144dp"
                android:layout_height="50dp"
                android:hint="비번재확인"
                android:inputType="textPassword"
                android:textAlignment="center" />

            <Button
                android:id="@+id/checkPassButton"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:text="중복확인"
                android:background="@drawable/button_round"
                android:textAlignment="center"

                />
        </LinearLayout>


    </GridLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="저장"
            android:background="@drawable/button_round"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"

            />

        <Button
            android:id="@+id/logoutButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:text="로그아웃"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_round"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/memberWithdraButton"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_round"
            android:text="회원탈퇴" />
    </LinearLayout>
</LinearLayout>